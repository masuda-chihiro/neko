<%= form_for(@film) do |f| %>
    <%= render 'shared/error_messages_forfilms' %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :year %>
  <%= f.text_field :year %>

  <%= f.label :director %>
  <%= f.text_field :director %>

  <%= f.submit yield(:title), class: "btn btn-primary" %>
<% end %>